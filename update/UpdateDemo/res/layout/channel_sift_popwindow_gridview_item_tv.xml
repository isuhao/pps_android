<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal"
     >
    <TextView
        android:id="@+id/channel_pop_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px_24" 
        android:textColor="#ffffff"
        android:text="全部"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/px_7"
        android:layout_marginBottom="@dimen/px_7"/>

    <ImageView
        android:id="@+id/channel_pop_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/shaixuan_buttn" 
        android:background="#00000000"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/px_14"
        android:layout_marginTop="@dimen/px_7"
        android:layout_marginBottom="@dimen/px_7"/>

</LinearLayout>